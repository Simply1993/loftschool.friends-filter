extends ../main.layout.pug

block scripts
  script(src='./assets/js/main.bundle.js')

block content
  .main-section
    main.main
      section.window
        h1.visually-hidden Другофильтр
        .friends-filter
          .friends-filter__header
            .friends-fitler__title Выберите друзей
            .friends-filter__btn.btn.btn--close
          .friends-filter__zones
            .friends-filter__zone.drop-zone.drop-zone--left#source
              .drop-zone__filter.filter
                input.filter__input(placeholder='Начните вводить имя друга')
              .drop-zone__content
                .drop-zone__title Ваши друзья
                .drop-zone__list.friends
            .friends-filter__zone.drop-zone.drop-zone--right#target
              .drop-zone__filter.filter
                input.filter__input(placeholder='Начните вводить имя друга')
              .drop-zone__content
                .drop-zone__title Друзья в списке
                .drop-zone__list.friends
                  ul.friends__list
          .friends-filter__footer
            button.friends-filter__btn.btn.btn--save Сохранить